<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.tistory.deque.translationtranslater.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/guideInputText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text="@string/guideInputText"
      android:textSize="18sp" />

    <EditText
      android:id="@+id/inputEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:ems="10"
      android:inputType="textMultiLine"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/translateButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="100dp"
      android:layout_marginVertical="30dp"
      android:layout_weight="0"
      android:onClick="clickTranslateButton"
      android:text="@string/translateButton_text" />

    <EditText
      android:id="@+id/translateTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="8"
      android:text="@string/translateTextView_text"
      android:textSize="18sp" />

    <Button
      android:id="@+id/shareButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="0"
      android:onClick="clickShareButton"
      android:text="SHARE" />

    <Button
      android:id="@+id/cameraButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="0"
      android:onClick="clickCameraButton"
      android:text="CAMERA" />

    <Button
      android:id="@+id/galleryButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="0"
      android:onClick="clickGalleryButton"
      android:text="Gallery" />

  </LinearLayout>

</LinearLayout>
